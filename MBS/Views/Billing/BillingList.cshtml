@model IEnumerable<MBS.Models.Billing>

<div class="content-body">
    <div class="container-fluid">

        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Billing</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">List</a></li>
                </ol>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <a class="btn btn-primary" asp-controller="Billing" asp-action="AddNewBill">Add New Bill</a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Billing List</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Amount</th>
                                        <th>Remaining</th>
                                        <th>FromDate</th>
                                        <th>ToDate</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.SpentName</td>
                                            <td>@item.SepentAmount</td>
                                            <td>@item.RemaingAmount</td>
                                            <td>@item.FromDate</td>
                                            <td>@item.ToDate</td>
                                            <td>@item.Status</td>
                                            <td>
                                                <a asp-action="AddNewBill" asp-route-id="@item.Id" class="mr-4" data-toggle="tooltip" data-placement="top" title="Edit">
                                                    <i class="fa fa-pencil color-muted"></i> </a>
                                                <a asp-action="DeleteBill" asp-route-id="@item.Id" class="mr-4" data-toggle="tooltip" data-placement="top" title="Delete">
                                                    <i class="fa fa-close color-muted"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function() {
            $('.delete-btn').click(function(e) {
                e.preventDefault();
                var url = $(this).attr('href');

                if (confirm('Are you sure you want to delete this bill?')) {
                    $.ajax({
                        url: url,
                        type: 'POST',
                        success: function(result) {
                            window.location.reload();
                        },
                        error: function(error) {
                            alert('Error deleting bill');
                        }
                    });
                }
            });
        });
    </script>
}
